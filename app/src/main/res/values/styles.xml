<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="btn_style" parent="ThemeOverlay.Material3.Button.ElevatedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_40sdp</item>
        <item name="android:layout_marginEnd">@dimen/_40sdp</item>
        <item name="android:backgroundTint">@color/pink</item>
        <item name="android:color">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="banner_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/source_sans_pro_bold</item>
        <item name="android:layout_marginBottom">@dimen/_7sdp</item>
    </style>

    <style name="TabTextAppearanceHome" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="fontFamily">@font/source_sans_pro_semibold</item>
    </style>
    <style name="TabTextAppearanceTrip" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="fontFamily">@font/source_sans_pro_bold</item>
    </style>

    <style name="title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_12sdp</item>
        <item name="android:layout_marginTop">@dimen/_40sdp</item>
        <item name="android:fontFamily">@font/source_sans_pro_bold</item>
        <item name="android:textColor">@color/title_color</item>
        <item name="android:textSize">@dimen/_20ssp</item>
    </style>

    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">40dp</item>
        <item name="cornerSizeBottomRight">40dp</item>
    </style>

    <style name="roundedImageViewItem" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="roundedDetailImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">17dp</item>

    </style>

    <style name="txt_search_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:fontFamily">@font/source_sans_pro_bold</item>
        <item name="android:textColor">@color/common_text_color</item>
    </style>

    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorAccent">@android:color/holo_blue_dark</item>
        <item name="colorPrimary">@android:color/darker_gray</item>
        <item name="android:textColorPrimary">@color/pink</item>
    </style>

    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@android:color/holo_orange_dark</item>
    </style>

    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@android:color/holo_green_dark</item>
    </style>

</resources>